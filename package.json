{
  "name": "emmersive",
  "version": "0.1.0",
  "description": "emmersive",
  "dependencies": {
    "babel-preset-es2015": "^6",
    "es6-promise": "^3",
    "firebase": "^3",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "*",
    "babel-loader": "*",
    "clean-webpack-plugin": "*",
    "copy-webpack-plugin": "*",
    "css-loader": "*",
    "extract-text-webpack-plugin": "*",
    "file-loader": "^0.9.0",
    "firebase-tools": "^3.0.2",
    "html-loader": "*",
    "html-webpack-plugin": "^2.21.0",
    "http-server": "^0.9.0",
    "postcss-custom-properties": "*",
    "postcss-import": "*",
    "postcss-loader": "*",
    "postcss-nested": "*",
    "style-loader": "*",
    "webpack": "*"
  },
  "scripts": {
    "build:dev": "webpack -d --progress",
    "build:prod": "webpack -p --progress",

    "deploy:auth": "firebase login",
    "deploy:unauth": "firebase logout",
    "serve": "firebase serve",

    "deploy:dev": "npm run build:prod && firebase deploy",
    "deploy:staging": "npm run build:prod && firebase deploy -f emmersive-stage",
    "deploy:prod": "npm run build:prod && firebase deploy -f flickering-inferno-1351",

    "dev": "webpack -d --watch --progress | http-server ./www -c-1",
    "start": "webpack -d --watch --progress | http-server ./www -c-1"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar"
  ],
  "cordovaPlatforms": [
    "ios",
    "android"
  ]
}
